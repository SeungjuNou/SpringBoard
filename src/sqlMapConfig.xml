<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMapConfig      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-config-2.dtd">

<sqlMapConfig>
	
	<settings useStatementNamespaces="true"	/>
	<transactionManager type="JDBC" commitRequired="false">
		<dataSource type="SIMPLE">
			<property name="JDBC.Driver"
				value="com.mysql.jdbc.Driver" />
			<property name="JDBC.ConnectionURL"
				value="jdbc:mysql://localhost:3306/MvcBoard?characterEncoding=utf8" />
			<property name="JDBC.Username" value="BoardAdmin" />
			<property name="JDBC.Password" value="mysql1234" />
		</dataSource>
	</transactionManager>
	
	<sqlMap resource="sqlQuery/member.xml" />
	<sqlMap resource="sqlQuery/board.xml" />
	<sqlMap resource="sqlQuery/login.xml" />
</sqlMapConfig>